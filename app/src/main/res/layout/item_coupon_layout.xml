<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/layout_input_outline"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/LightSteelBlue">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Coupon"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textAllCaps="true"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_couponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIWALI20"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use and save"
                android:textColor="@color/Gray"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_totalDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 100"
                android:layout_marginStart="10dp"
                android:textColor="@color/Blue"/>
        </LinearLayout>

        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/down"
            app:tint="@color/Black" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_couponDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zxing_msg_default_status"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:justificationMode="inter_word"
            android:textColor="@color/Gray"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            android:text="Apply"
            android:layout_margin="5dp"/>


    </LinearLayout>

</LinearLayout>