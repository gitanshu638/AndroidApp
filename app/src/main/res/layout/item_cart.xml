<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/PaleGoldenrod"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_cartImage"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/vegetables"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView

                    android:id="@+id/txt_cartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetable"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_cartBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallmart"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/DarkBlue"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_cartQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty: 10"
                    android:background="@color/zxing_transparent"
                    android:drawableRight="@drawable/down"
                    android:drawableTint="@color/Black"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_cartDiscountedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 100"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/Black"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_cartOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 100"
                        android:textSize="14sp"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/Gray"/>
                </LinearLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_cartDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zxing_msg_default_status"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/Black"
                    android:maxLines="2"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/delete_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>